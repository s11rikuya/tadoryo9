<div class="content">
  <div class="info">
    <h1><%= @title %></h1>
    <p>【<%= @since_time %>】 - 【<%= @until_time %>】</p>
    <form action="/index" method="get">
      <input type="text" name="since_time" placeholder="XXXX/XX/XX">
      <input type="text" name="until_time" placeholder="XXXX/XX/XX">
      <input type="submit" value="save">
    </form>
    <p>
      チェックイン数: <%= @range_indexs.size %><br>
      移動総距離: <%= @sum_distance %>km
    </p>
    <ol type="A">
      <% @range_indexs.each do |point| %>
      <li><%= point[:name] %><br><small><%= point[:time] %></small></li>
