<div class="container-fluid" style="height: calc(100% - 74px);">
  <div class="row" style="height: 100%;">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar pt-3">
      <div class="sidebar-sticky">
        <% if @range_indexes %>
        <p>
          Check-in: <%= @range_indexes.size %><br>
          Total: <%= @sum_distance %>km
        </p>
        <ol type="A">
          <% @range_indexes.each do |point| %>
          <li><%= point["name"] %><br><small><%= point["time"] %></small></li>
          <% end %>
        </ol>
        <% end %>
      </div>
    </nav>

    <main role="main" style="height: 100%; padding: 0px;" class="main col-md-9 col-lg-10">
      <div id="map"></div>
    </main>
  </div>
</div>
<%= erb :js %>
